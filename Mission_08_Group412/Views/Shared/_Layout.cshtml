<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mission_08_Group412</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Mission_08_Group412.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="nav">
            
            <a class="nav__logo" asp-area="" asp-controller="Home" asp-action="Index">QuadrantFocus</a>
            <a href="#" class="nav__hamburger">
                <span class="nav__hamburger__line"></span>
                <span class="nav__hamburger__line"></span>
                <span class="nav__hamburger__line"></span>
            </a>
            <div class="nav__menu">
                <ul>
                    <li class="nav__menu__link">
                            <a asp-area="" asp-controller="Home" asp-action="Index">HOME</a>
                    </li>
                    <li class="nav__menu__link">
                            <a  asp-area="" asp-controller="Home" asp-action="Add">ADD TASK</a>
                    </li>
                    <li class="nav__menu__link">
                        <a asp-area="" asp-controller="Home" asp-action="History">HISTORY</a>
                    </li>
                    
                </ul>
            </div>
        </nav>
    </header>

    <div class="">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="swag-footer">
        <div class="">
            &copy; @Date - Group 4-12 - IN CONJUNCTION WITH "7 HABITS FOR HIGHLY EFFECTIVE PEOPLE"
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @functions {
        int Date = (DateTime.Now.Year);
    }
</body>
</html>
