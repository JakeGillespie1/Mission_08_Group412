@{
}
@model ToDoList
<!--Add task form goes below-->

<div class="form-box">
    <div class="form-container">
<form method="post">
    <input type="hidden" asp-for="TaskId" />
    <label asp-for="TaskName">Task Name:</label>
    <input asp-for="TaskName" />
    <br />
    <label asp-for="DueDate">Task Due Date:</label>
    <input type="date" asp-for="DueDate" />
    <br />
    <label asp-for="QuadrantNumber">Quadrant Number:</label>
    <input asp-for="QuadrantNumber" />
    <br />
    <label asp-for="CategoryId">Category</label>
    <select asp-for="CategoryId">
    @foreach (Category category in ViewBag.Categories)
    {
        <option value="@category.CategoryId">@category.CategoryName</option>
    }
    </select>
    <br />
    <label asp-for="Completed">Is this task completed?</label>
            <select asp-for="Completed">
        <option value="true">Y</option>
        <option value="false">N</option>
    </select>
    <br />
    <button type="submit">Submit</button>
</form>
</div>
</div>